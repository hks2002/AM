<% QVariant tid = variant("tid") %>
<% QVariant sqlop = CFG("SQLOP") %>
<form id="searchFormTodoList<%== tid %>" name="searchFormTodoList">
   <input class="mini-checkbox" name="advanceSearchCheckBox" onclick="toggleAdvanceSearch(this, 'searchFormTodoList<%== tid %>')" /><%== UI("Advance Search") %>
