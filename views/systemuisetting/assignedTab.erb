<%#include "dataservicecontroller.h" %>
<%#include "sqlobjects/vtodolisttabobject.h" %>
<%
QString lang = httpRequest().cookie("lang");
QString tid = tId();

TCriteria cri;
QList<QPair<int, Tf::SortOrder>> sorts;
QStringList fields;

cri.add(VTodoListTabObject::TodoListId, variant("todoListId"));
sorts<<qMakePair(VTodoListTabObject::TabOrder,Tf::AscendingOrder)<<qMakePair(VTodoListTabObject::TabCd,Tf::AscendingOrder);
