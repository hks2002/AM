<%#include <TModelUtil> %>
<%#include "dataservicecontroller.h" %>
<%#include "todolistbutton.h" %>
<%#include "sqlobjects/todolistbuttonobject.h" %>
<%#include "sqlobjects/todolistobject.h" %>
<%
QString lang = httpRequest().cookie("lang");

TCriteria cri;
cri.add(TodoListButtonObject::ButtonId, variant("buttonId"));
auto todoListButtonList = tfGetModelListByCriteria<TodoListButton, TodoListButtonObject>(cri);

QVariantList notIn;

for (auto &x : todoListButtonList) {
    notIn<<x.todoListId();
}

cri.clear();
QList<QPair<int, Tf::SortOrder>> sorts;
QStringList fields;

cri.add(TodoListObject::TodoListId, TSql::NotIn, notIn);
sorts<<qMakePair(TodoListObject::TodoListCd,Tf::AscendingOrder);
fields<<"todoListId"<<"todoListCd"<<"todoListNameZh"<<"todoListNameZh";
QString data = "";
QVariantMap qMapOut; 

qMapOut.insert("masterPairList",QList<QVariant>()<<(QStringList() << "buttonId" << variant("buttonId").toString()));
qMapOut.insert("slaver","TodoList");
qMapOut.insert("slaverList",QStringList()<<"todoListId");
qMapOut.insert("assignUrl","SystemUIsetting/assignButtonToTodoList");

%>
<div id="listBox_unassignedTodoList<%== variant("uId") %>" class="mini-listbox" style="width:250px;height:150px;" textfield="<%== lang == "zh" ? "todoListNameZh" : "todoListNameEn";%>"
valuefield="todoListId" showcheckbox="true" multiselect="true" data='<%== data %>'>
  <div property="columns">
    <div type="indexcolumn"></div>
    <div type="checkcolumn"></div>
    <div visible="false" field="todoListId"></div>
    <div header="<%== UI("TODOLISTCD") %>" field="todoListCd"></div>
    <div header="<%== lang == "zh" ? "todoListNameZh" : "todoListNameEn"; %>" field="<%== lang == "zh" ? UI("TODOLISTNAMEZH") : UI("TODOLISTNAMEEN") %>"></div>
  </div>
</div>
<% if (variant("assign").toString() == "assign") { %>
   <a class="mini-button" onclick="assignTodoList('listBox_unassignedTodoList<%== variant("uId") %>')"><%== UI("Assign") %></a>
   <%== renderPartial("JSassign",qMapOut); %>
<% } %>
<% if (variant("window").toString() == "window") { %>
  <a name="closeWindow" class="mini-button" onclick="closeWindow('window<%== variant("uId") %>')"><%== UI("Close") %></a></div>
<% } %>
